@page "/"
@rendermode InteractiveServer
<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<Counter IncrementAmount="10"/>

<input @onchange="InputChanged"/>
<p>@message</p>

@code{
    string message = "";

    public void InputChanged(ChangeEventArgs e){
        message = (string)e.Value;
    }
}